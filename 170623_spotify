<script>
    function onBannerClick(event) {
    event.preventDefault();
    
    var uri = this.href;
    var artwork = this.getAttribute('data-artwork');

    var gaObject = {
        eventCategory: 'HPTO_2016_Maj_26_asia',
        eventAction: 'Click',
        eventLabel: 'HPTO-' + artwork,
        hitCallback: function () {
            document.location = uri;
        }
    }   
    console.log('HPTO-' + artwork);

    window.ga('send', 'event', gaObject);
}

var artworks=document.querySelectorAll('.artworks a');
for (var i=0; i<artworks.length;i++) {
    artworks[i].addEventListener('click',onBannerClick); 
}
